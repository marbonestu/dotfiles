#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/projects ~/projects/diligent -mindepth 1 -maxdepth 1 -type d | fzf --header 'jump-to-project' )
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
# tmux_running=$(pgrep tmux)

SESSION_NAME=$selected_name START_DIR=$selected tmuxp load -y default
