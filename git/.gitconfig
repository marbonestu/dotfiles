[core]
    pager = delta
    editor = nvim 
    excludesFile = ~/.global-gitignore

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[user]
    name = Marc Arbones Tutusaus
    email = marbonestu@gmail.com

[init]
    defaultBranch = main

[push]
    default = current

[pull]
    rebase = true

[rebase]
  autoStash = true

[include]
  path = ~/delta/themes.gitconfig

[includeIf "gitdir:~/projects/diligent/"]
    path = ~/.gitconfig-diligent

[help]
    autocorrect = 10

[alias]
    co = checkout
    c = commit -m
    camend = commit --amend
    sw = switch
    s = status
