alias v='nvim'
alias la='exa -la'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# git
alias gch='git branch -a --sort=-committerdate | fzf --header Checkout | sed "s/remotes/origin\///g" | xargs git switch'
alias lg='lazygit'

# tmux
alias t='tmux attach || tmux new-session'


function cd {
  builtin cd "$@" && la
}
