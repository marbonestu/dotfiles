#!/usr/bin/env bash

DOTFILES_FOLDERS="
  tmux,
  hypr,
  git,
  helix,
  nvim,
  zsh,
  lazygit,
  starship,
  kitty,
  ghostty,
  zellij,
  opencode,
  claude,
  yazi,
  scripts
"

for folder in $(echo $DOTFILES_FOLDERS | sed "s/,/ /g"); do
  stow -vSt ~ $folder
done

# Install Cursor config (handles macOS-specific path)
echo "Installing Cursor configuration..."
./cursor/install-cursor.sh
