{
  "k8s kustomization": {
    "prefix": "k-kustomization",
    "description": "Kustomization",
    "body": [
      "---",
      "apiVersion: kustomize.config.k8s.io/v1beta1",
      "kind: Kustomization",
      "",
      "resources:",
      "  - ${1:}"
    ]
  },
  "Flux Kustomization Helm": {
    "prefix": "flux-kustomization-helm",
    "body": [
      "---",
      "apiVersion: kustomize.toolkit.fluxcd.io/v1beta2",
      "kind: Kustomization",
      "metadata:",
      "  name: ${1:}",
      "  namespace: flux-system",
      "spec:",
      "  interval: 10m",
      "  path: ${$2:./}",
      "  prune: true",
      "  wait: false",
      "  sourceRef:",
      "    kind: HelmRepository",
      "    name: ${1:}",
      ""
    ],
    "description": "Flux Kustomization Helm Repository"
  },

  "Flux Kustomization Git": {
    "prefix": "flux-kustomization-git",
    "body": [
      "---",
      "apiVersion: kustomize.toolkit.fluxcd.io/v1beta2",
      "kind: Kustomization",
      "metadata:",
      "  name: ${1:}",
      "  namespace: flux-system",
      "spec:",
      "  interval: 10m",
      "  path: ${2:./}",
      "  prune: true",
      "  wait: false",
      "  sourceRef:",
      "    kind: GitRepository",
      "    name: ${1:}",
      ""
    ],
    "description": "Flux Kustomization Git Repository"
  },
  "k8s Namespace": {
    "prefix": "k-namespace",
    "description": "k8s Namespace",
    "body": [
      "---",
      "apiVersion: v1",
      "kind: Namespace",
      "metadata:",
      "  name: ${1:name}",
      ""
    ]
  },
  "k8s flux helm repository": {
    "prefix": "k-helmrepo",
    "description": "k8s helm repository",
    "body": [
      "---",
      "apiVersion: source.toolkit.fluxcd.io/v1beta2",
      "kind: HelmRepository",
      "metadata:",
      "  name: ${1:name}",
      "  namespace: flux-system",
      "spec:",
      "  interval: 1h",
      "  url: ${2:url}",
      ""
    ]
  },
  "k8s flux helm release": {
    "prefix": "k-helmrelease",
    "description": "k8s Helm Release",
    "body": [
      "---",
      "apiVersion: helm.toolkit.fluxcd.io/v2beta1",
      "kind: HelmRelease",
      "metadata:",
      "  name: ${1:}",
      "  namespace: ${2:}",
      "spec:",
      "  interval: 15m",
      "  chart:",
      "    spec:",
      "      chart: ${3:}",
      "      version: 1.1.12",
      "      sourceRef:",
      "        kind: HelmRepository",
      "        name: ${1:}",
      "        namespace: flux-system",
      "      interval: 15m",
      "  values:",
      "    ${4:}"
    ]
  }
}
